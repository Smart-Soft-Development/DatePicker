<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#BABEC1"
    tools:context="com.ycuwq.datepicker.sample.MainActivity">

    <TextView
        android:id="@+id/tv_date"
        android:padding="8dp"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical">
    <com.ycuwq.datepicker.date.DatePicker
        android:id="@+id/datePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:background="#FFFFFF"

        app:itemTextColor="#BABEC1"
        app:halfVisibleItemCount="1"
        app:itemHeightSpace="30dp"
        app:selectedTextColor="#000000"
        app:zoomInSelectedItem="true"
        app:itemTextSize="16sp"
        app:textGradual="false"

        app:wheelCurtain="false"
        app:wheelCurtainBorder="false"

        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#A0A3A6"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"/>

    <Button
        android:id="@+id/button"
        android:text="Show Dialog"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="55dp" />
    </LinearLayout>
</LinearLayout>
